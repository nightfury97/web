
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


@{
    var session = (List<SweepCake.Models.CartItem>)Session[SweepCake.Common.CommonConstant.CartSession];
    var userid = (UserLogin)Session[SweepCake.Common.CommonConstant.USER_SESSION];
}
@if (session == null || session.Count == 0)
{
    <div class="check-out">
        <div class="container">
            <h4 class="title">Shopping cart is empty</h4>
            <p class="cart">You have no items in your shopping cart.<br><a href="/HomePage/index">Click here</a> to continue shopping</p>
        </div>
    </div>
}
else if (userid == null)
{
    <div class="check-out">
        <div class="container">
            <h4 class="title">You must login to payment</h4>

            <p class="cart"><br><a href="/Login/Login">Click here</a> to Login</p>
        </div>
    </div>
}
else
{
<div class="content">
    <div class="container">
        <div class="login-page">
            <div class="account_grid">
                @using (Html.BeginForm("ShippingInfo", "Cart", FormMethod.Post))
                {
                    <div class="col-md-6 login-left wow fadeInLeft" data-wow-delay="0.4s">
                        <h3>SHIPPING ADDRESS</h3>

                        <table border="0" id="nonus">
                            <tr>
                                <td>
                                    <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" id="fname" name="firstname" placeholder="John M. Doe" data-fname="@userid.Name">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="email"><i class="fa fa-envelope"></i> Email</label>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" id="email" name="email" placeholder="john@example.com" data-email="@userid.Email">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" id="adr" name="address" placeholder="542 W. 15th Street" data-address="@userid.Address">
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <label for="phone"><i class="fa fa-institution"></i> Phone</label>
                                </td>
                            </tr>
                            <tr>
                                <td> <input type="text" id="phone" name="phone" placeholder="123456789" data-phone="@userid.Phone"></td>
                            </tr>
                        </table>
                        <input type="checkbox" name="user" id="checkuser" value="user" style="margin-top:13px"><span>USE USER'S INFORMATION</span><br>
                        <input type="checkbox" name="payment" id="checkpayment" value="payment" style="margin-top:13px"><span>  CASH ON DELIVERY</span><br>

                        <button type="submit" class="btn btn-lg btn-success btn-block" style="margin-top:13px">PURCHASE</button>


                    </div>


                    <div class="col-md-6 login-right wow fadeInRight" data-wow-delay="0.4s" id="hide">
                        <h3>PAYMENT</h3>
                        <label for="fname">Accepted Cards</label>
                        <div class="icon-container">
                            <i class="fa fa-cc-visa" style="color:navy;"></i>
                            <i class="fa fa-cc-amex" style="color:blue;"></i>
                            <i class="fa fa-cc-mastercard" style="color:red;"></i>
                            <i class="fa fa-cc-discover" style="color:orange;"></i>
                        </div>

                        <label for="cname">Name on Card</label>
                        <input type="text" id="cname" name="cardname" placeholder="John More Doe">
                        <label for="ccnum">Credit card number</label>
                        <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
                        <label for="expmonth">Exp Month</label>
                        <input type="text" id="expmonth" name="expmonth" placeholder="September">

                        <label for="expyear">Exp Year</label>
                        <input type="text" id="expyear" name="expyear" placeholder="2018">

                        <label for="cvv">CVV</label>
                        <input type="text" id="cvv" name="cvv" placeholder="352">

                    </div>
                }
            </div>

                <div class="clearfix"> </div>
            </div>
                </div>
</div>
}
<script language="javascript">
    document.getElementById('checkpayment').onclick = function (e) {
        var x = document.getElementById("hide");
        if (this.checked) {
            x.style.display = "none";
        }
        else {
            x.style.display = "block";
        }
    };

