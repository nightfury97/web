        if (this.checked) {
            $("#fname").val($("#fname").data('fname'));
            $("#email").val($("#email").data('email'));
            $("#adr").val($("#adr").data('address'));
            $("#phone").val($("#phone").data('phone'));
        }
       
    };
</script>